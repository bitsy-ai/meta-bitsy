[Unit]
Description=OctoPrint
After=network-online.target octoprint-venv.service octoprint-link.service
Wants=network-online.target octoprint-venv.service octoprint-link.service

[Service]
Type=simple
SyslogIdentifier=octoprint
RuntimeDirectory=octoprint
ExecStart=/bin/bash -c "JANUS_EDGE_HOSTNAME=$(cat /etc/hostname) \
    JANUS_EDGE_API_TOKEN=$(cat $CREDENTIALS_DIRECTORY/janus-edge-api-token) \
    {OCTOPRINT_VENV}/bin/python -m octoprint serve \
    --host 127.0.0.1 \
    --config {OCTOPRINT_BASEDIR}/config.yaml \
    --port {OCTOPRINT_PORT}"
Restart=on-failure
RestartSec=30
IOSchedulingClass=realtime
User={OCTOPRINT_USER}

[Install]
WantedBy=multi-user.target
