#!/bin/sh

echo "PREINIT: Start"

PATH=/sbin:/bin:/usr/sbin:/usr/bin

mount -o remount,rw /

mkdir -p /proc
mkdir -p /sys
mkdir -p /run
mkdir -p /var/run

mount -t proc proc /proc
mount -t sysfs sysfs /sys

START_BLOCK=$(cat {START_BLOCK})
END_BLOCK=$(($START_BLOCK+$(cat {SIZE_BLOCK})))
END_DISK=$(($(cat {END_BLOCK})-8))

if [ "$END_DISK" -gt "$END_BLOCK" ]
then
    START_TS=$(/bin/date +%s)
    echo "Growing {OVERLAYFS_ETC_DEVICE} to fill disk $START_TS" > /dev/kmsg
    umount {OVERLAYFS_ETC_DEVICE}
    echo "Unmounted {OVERLAYFS_ETC_DEVICE}"
    echo "Running: parted ---pretend-input-tty {PARTED_DEVICE} resizepart {PARTED_PART} 100%"
    parted ---pretend-input-tty {PARTED_DEVICE} resizepart {PARTED_PART} 100%
    echo "Grew {OVERLAYFS_ETC_DEVICE} partition to 100%"
    resize2fs -p {OVERLAYFS_ETC_DEVICE}
    echo "Finished resizing filesystem {OVERLAYFS_ETC_DEVICE}"
    STOP_TS=$(/bin/date +%s)
    echo "Finished bitsy-growfs at $STOP_TS (ran $(($STOP_TS-$START_TS)) seconds)" > /dev/kmsg
else
    echo "Skipping growfs, {OVERLAYFS_ETC_DEVICE} end block $END_BLOCK is within 8 sectors of $END_DISK" > /dev/kmsg
fi

[ -z "$CONSOLE" ] && CONSOLE="/dev/console"

mkdir -p {OVERLAYFS_ETC_MOUNT_POINT}
if mount -n -t {OVERLAYFS_ETC_FSTYPE} \
    -o {OVERLAYFS_ETC_MOUNT_OPTIONS} \
    {OVERLAYFS_ETC_DEVICE} {OVERLAYFS_ETC_MOUNT_POINT}
then
    mkdir -p {OVERLAYFS_ETC_MOUNT_POINT}/overlay-etc/upper
    mkdir -p {OVERLAYFS_ETC_MOUNT_POINT}/overlay-etc/work
    mount -n -t overlay \
        -o upperdir={OVERLAYFS_ETC_MOUNT_POINT}/overlay-etc/upper \
        -o lowerdir=/etc \
        -o workdir={OVERLAYFS_ETC_MOUNT_POINT}/overlay-etc/work \
        -o index=off,xino=off,redirect_dir=off,metacopy=off \
        {OVERLAYFS_ETC_MOUNT_POINT}/overlay-etc/upper /etc || \
            echo "PREINIT: Mounting etc-overlay failed!"

    mkdir -p OVERLAYFS_ETC_MOUNT_POINT/overlay-home/upper
    mkdir -p OVERLAYFS_ETC_MOUNT_POINT/overlay-home/work
    mount -n -t overlay \
        -o upperdir={OVERLAYFS_ETC_MOUNT_POINT}/overlay-home/upper \
        -o lowerdir=/home \
        -o workdir={OVERLAYFS_ETC_MOUNT_POINT}/overlay-home/work \
        -o index=off,xino=off,redirect_dir=off,metacopy=off \
        {OVERLAYFS_ETC_MOUNT_POINT}/overlay-home/upper /home || \
            echo "PREINIT: Mounting home-overlay failed!"

else
    echo "PREINIT: Mounting </data> failed!"
fi

echo "PREINIT: done; starting </sbin/init>"
exec {SBIN_INIT_NAME}
