[Unit]
Description=Create volatile upper and work dir for /etc overlayfs
DefaultDependencies=no
After=systemd-remount-fs.service data.mount

[Service]
Type=oneshot
ExecStart=/bin/mkdir -p /data/overlayfs/etc/upper
ExecStart=/bin/mkdir -p /data/overlayfs/etc/work
RemainAfterExit=yes

[Install]
WantedBy=local-fs.target
