[Unit]
Description=Create volatile upper and work dir for /home overlayfs
DefaultDependencies=no
After=systemd-remount-fs.service data.mount

[Service]
Type=oneshot
ExecStart=/bin/mkdir -p /data/overlayfs/home/upper
ExecStart=/bin/mkdir -p /data/overlayfs/home/work
RemainAfterExit=yes

[Install]
WantedBy=local-fs.target
