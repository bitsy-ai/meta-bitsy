[Unit]
Description=GStreamer Daemon
StartLimitBurst=3
StartLimitIntervalSec=30

[Service]
Restart=on-failure
RestartSec=5s
Environment=GSTD_HTTP_PORT=5002
Environment=GSTD_TCP_PORT=5003
Environment=GSTD_DEBUG_LEVEL=4
ExecStart=/usr/bin/gstd --enable-http-protocol --http-port="${GSTD_PORT}" --gst-debug-level="${GSTD_DEBUG_LEVEL}" --tcp-base-port="${GSTD_TCP_PORT}" --enable-tcp-protocol 

[Install]
WantedBy=default.target
